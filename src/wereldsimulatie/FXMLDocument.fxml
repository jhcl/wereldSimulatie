<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane  xmlns:fx="http://javafx.com/fxml/1" fx:id="grid_totaal"  xmlns="http://javafx.com/javafx/8" prefWidth="800" prefHeight="600"  fx:controller="wereldsimulatie.FXMLDocumentController">
    <gridLinesVisible>false</gridLinesVisible>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="50.0" prefWidth="50.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="400.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="100.0" prefWidth="348.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"  />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label fx:id="labelSnelheid" text=" Snelheid:" GridPane.rowIndex="1" minWidth="100.0" /> 
      <Slider fx:id="slider" onMouseReleased="#veranderSnelheid"  GridPane.rowIndex="1" GridPane.columnIndex="1"  />
      <FlowPane fx:id="flow" prefHeight="14.0"  hgap="5"  GridPane.columnIndex="1" >
          <children>
      <Button fx:id="save" onMouseClicked="#saveSim" text="save" GridPane.columnIndex="2" prefWidth="75"/>
      <Button fx:id="restore" onMouseClicked="#restoreSim" text="restore" GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="75"   />
      <Button fx:id="pauzeer" onMouseClicked="#pauzeerSim" text="pause" GridPane.columnIndex="3"  prefWidth="75" />
      <Button fx:id="start" onMouseClicked="#startSim" text="start" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="75" />
      <Button fx:id="stap" onMouseClicked="#stapDoorSimulatie" text="stap" GridPane.columnIndex="4" GridPane.rowIndex="1" prefWidth="75" />              
          </children>
      </FlowPane>
      <ScrollPane  fx:id="scroll" onScroll="#zoom"  prefHeight="400.0" prefWidth="800.0" GridPane.rowIndex="2" GridPane.columnSpan="20" />

<!--      <Button mnemonicParsing="false" onMouseClicked="#buttonHandler" text="Button" GridPane.columnIndex="1" /> -->
   </children>
   </GridPane>
